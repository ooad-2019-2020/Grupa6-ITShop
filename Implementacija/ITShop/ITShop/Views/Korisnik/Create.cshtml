@model ITShop.Models.Korisnik

@{
    ViewData["Title"] = "Create";
}
<link rel="stylesheet" href="~/css/Korisnik.css" />


<div class="korisnikRegistracija">
    <h1>REGISTRACIJA</h1>
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Ime" class="control-label"></label><br />
                    <input asp-for="Ime" class="form-control" placeholder="Unesite Vaše ime ..."/>
                    <span asp-validation-for="Ime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Prezime" class="control-label"></label><br />
                    <input asp-for="Prezime" class="form-control" placeholder="Unesite Vaše prezime ..." />
                    <span asp-validation-for="Prezime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="KorisnickoIme" class="control-label"></label><br />
                    <input asp-for="KorisnickoIme" class="form-control" placeholder="Unesite Vaše korisničko ime ..."/>
                    <span asp-validation-for="KorisnickoIme" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label><br />
                    <input asp-for="Email" class="form-control" placeholder="Unesite Vaš e-mail ..." />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Adresa" class="control-label"></label><br />
                    <input asp-for="Adresa" class="form-control" placeholder="Unesite Vašu adresu ..."/>
                    <span asp-validation-for="Adresa" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Sifra" class="control-label"></label><br />
                    <input asp-for="Sifra" class="form-control" placeholder="Unesite Vašu šifru ..." />
                    <span asp-validation-for="Sifra" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DatumRodjenja" class="control-label"></label><br />
                    <input asp-for="DatumRodjenja" class="form-control" placeholder="Unesite Vaš datum rođenja ..."/>
                    <span asp-validation-for="DatumRodjenja" class="text-danger"></span>
                </div>
                <div style="padding-top:5px;" class="form-group">
                    <input type="submit" value="Registruj se" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
