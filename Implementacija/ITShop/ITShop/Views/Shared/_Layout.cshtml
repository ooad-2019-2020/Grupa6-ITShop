<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ITShop</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    <div id="header">
        <div id="logo">
            <img src="~/images/logo.png" width="200px">
        </div>
        <div id="searchBar">
            <input type="text" placeholder="Pretraga ..." name="search" style="padding: 1px 2px; width: 300px; height: 38px; text-align: center;">
            <button type="submit" style="height: 41px; width: 50px;"><i class="fa fa-search"></i></button>
        </div>
        <div id="prijaviSe">
            <a href="#">Prijavi se </i> <i class="fa fa-user"></i></a>
        </div>
    </div>
    <hr>

    <div class="navbar">
        <a class="active" href="#">Početna</a>
        <a href="#">Kategorije</a>
        <a href="#">Sastavi računar</a>
        <a href="#">Najbolje ponude</a>
        <a href="#">Forum</a>

    </div>

    <div class="srceKorpa">
        <img src="~/images/srce.jpg" width="50px" style="padding-right: 0px; margin: 0;">
        <img src="~/images/korpa.png" width="50px" style="padding-left: 0px; margin: 0;">
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="footer">
        <div class="informacije">
            <a style="font-size: 26px;">
                Informacije<a>
                    <hr width="50%">
                    <a href="#">O nama</a><br><br>
                    <a href="#">Kontakti</a>
        </div>

        <div class="lokacija">
            <a style="font-size: 26px;">
                Gdje se nalazimo ?<a>
                    <hr width="50%">
                    <a href="#">Mapa do nas</a><br><br>
        </div>

        <div class="poslovanje">
            <a style="font-size: 26px;">
                Poslovanje<a>
                    <hr width="50%">
                    <a href="#">Način plaćanja</a><br><br>
                    <a href="#">Način dostave</a>
        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
